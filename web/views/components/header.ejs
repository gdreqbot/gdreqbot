<br></br>
<script>
    let { body } = document;
    let hidden = localStorage.getItem("navbar") == "hidden";

    if (hidden) {
        body.classList.add("navbar-hidden");
    } else {
        body.classList.remove("navbar-hidden");
    }

    window.addEventListener('load', () => {
        if (window.scrollY == 0) {
            body.classList.remove("navbar-hidden");
            localStorage.setItem("navbar", "visible");
        }
    });

    let step = false;

    window.addEventListener("scroll", () => {
        if (!step) {
            window.requestAnimationFrame(() => {
                let lastScroll = localStorage.getItem("lastScroll");
                let scroll = window.scrollY;

                if (scroll > lastScroll && scroll > 80 && !hidden) {
                    hidden = true;
                    body.classList.add("navbar-hidden");
                    localStorage.setItem("navbar", "hidden");
                } else if (scroll < lastScroll && hidden) {
                    hidden = false;
                    body.classList.remove("navbar-hidden");
                    localStorage.setItem("navbar", "visible");
                }

                localStorage.setItem("lastScroll", scroll);
                step = false;
            });
        }

        step = true;
    });
</script>
</body>
